{
  "name": "1-click-bom",
  "description": "Parse and write 1-click-BOM data.",
  "homepage": "http://1clickBOM.com",
  "author": "Kaspar Emanuel",
  "license": "MIT",
  "version": "1.0.7",
  "scripts": {
    "build": "mkdir -p lib && for file in src/*.coffee; do coffee -m -c -o lib/ $file; done",
    "lib": "git add lib",
    "test": "mocha -R spec --recursive --compilers coffee:coffee-script/register --require coffee-coverage/register-istanbul test/test.coffee && istanbul report text-summary lcov"
  },
  "precommit": [
    "build",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monostable/nodejs-1-click-bom.git"
  },
  "bugs": {
    "url": "https://github.com/monostable/nodejs-1-click-bom/issues"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "coffee-coverage": "^1.0.1",
    "coffee-script": "^1.9.3",
    "istanbul": "^0.4.2",
    "mocha": "^2.3.4",
    "pre-commit": "^1.1.2"
  },
  "main": "lib/main.js"
}
